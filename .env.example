# Test Environment (t3 or t5)
ENV=t3

# Browser Configuration
BROWSER=chromium
HEADED=false
VIEWPORT=desktop
TIMEOUT=30000
SLOW_MO=0

# Test Execution
PARALLEL=3
RETRY=2
TAGS=@smoke

# Database Configuration (Override defaults)
